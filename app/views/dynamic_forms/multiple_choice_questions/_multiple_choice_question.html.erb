<div id="multiple_choice_question_<%= multiple_choice_question.id -%>" class="multiple-choice-question">
  <div class="heading">
    <h3><%= multiple_choice_question.title -%></h3>
    <%= simple_format multiple_choice_question.text %>
  </div>
  <div class="field">
    <%= collection_radio_buttons :answer, :value, multiple_choice_question.options, :id, :label %>
  </div>
</div>
