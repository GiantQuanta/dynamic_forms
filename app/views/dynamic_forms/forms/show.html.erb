<% content_for(:main_title) { "Preview Form: #{@form.title}" } %>
<% content_for(:left_title) { link_to "<< Back", forms_path } %>

<div class="preview dynamic_forms">
  <p id="notice"><%= notice %></p>

  <h1>
    <%= @form.title %>
  </h1>

  <%= simple_format @form.description %>

  <% @form.items.each do |item| %>
    <%= render item %>
  <% end %>

</div>

<%= link_to 'Edit', edit_form_path(@form) %> |
<%= link_to 'Back', forms_path %>

